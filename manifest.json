{
  "manifest_version": 3,
  "name": "StorageFlow - Browser Storage Manager",
  "version": "2.0.0",
  "description": "Easily manage localStorage & sessionStorage with import/export, edit, and sync tools. Ideal for devs & power users.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "clipboardWrite",
    "downloads",
    "scripting"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "StorageFlow",
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "32": "src/assets/icons/icon32.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "32": "src/assets/icons/icon32.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/popup/styles/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
